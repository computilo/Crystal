// ------------------------------------------------------------------------
class Crystal_Methods_Mysql_Columns 
{

    

    function __construct($columns)
    {
		//print_r("i am here: ". $columns[0]);
		
	    if(isset($columns))
         {
             /** SELECTS LAST ELEMENT FROM $columns **/
            end($columns);
            $last_element = current($columns);
			
			
            foreach($columns as $value)
            {
            	
                    if($value != $last_element)
                    {
                    	
                        $this->columns .= Crystal_Methods_Mysql_Helper::add_apostrophe($value) . ',';
                    }
                    else
                    {
                        $this->columns .= Crystal_Methods_Mysql_Helper::add_apostrophe($value);
                    }

            }
             
         }
         else
         {
             $this->columns == FALSE;
         }
    	
		
      
    }

    public function __toString() 
	{
        return $this->columns;
    }
    
    
}