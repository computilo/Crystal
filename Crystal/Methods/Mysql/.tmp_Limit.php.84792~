// ------------------------------------------------------------------------
class Crystal_Methods_Mysql_Limit extends Crystal_Methods_Common
{

    

    function __construct($limit_params)
    {
		
		
	 	if(isset($limit_params[0]) && isset($limit_params[1]))
        {
            
			$this->limit = " LIMIT " . $limit_params[0] . ',' . $limit_params[1];

        }
        else
        {
            $this->limit = FALSE;
        }
    	
		
      
    }

    public function __toString() 
	{
        if(is_string($this->limit))
		{
			return $this->limit;
		}
		else
		{
			echo "Limit must be string";
			exit;
		}
		
    }
    
    
}