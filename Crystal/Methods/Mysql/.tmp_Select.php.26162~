class Crystal_Methods_Mysql_Select extends Crystal_Methods_Common
{

    

    function __construct($table)
    {


    if(is_array($table))
    {

         $this->get = "SELECT * FROM " . $table[0];

    }
    
   

      return $this;

      
    }

    function  __toString() {
        ;
    }
    
    
}