// ------------------------------------------------------------------------
class Crystal_Methods_Mysql_Columns extends Crystal_Methods_Common
{

    

    function __construct($columns=null)
    {
		
		
	    if(isset($columns))
         {
             /** SELECTS LAST ELEMENT FROM $columns **/
             end($columns);
            $last_element = current($columns);

            foreach($columns as $value)
            {
                    if($value != $last_element)
                    {
                        $this->columns .= $value . ',';
                    }
                    else
                    {
                        $this->columns .= $value;
                    }

            }
             
         }
         else
         {
             $this->columns == FALSE;
         }
    	
		
      
    }

    public function __toString() 
	{
        return $this->columns;
    }
    
    
}