// ------------------------------------------------------------------------
class Crystal_Methods_Mysql_Select extends Crystal_Methods_Common
{

    

    function __construct($table)
    {


	  
		$this->get = "SELECT * FROM " . Crystal_Methods_Mysql_Helper::add_single_quote($table[0]);
		
    
      
    }

    public function __toString() 
	{
        return $this->get;
    }
    
    
}